{
  "compilerOptions": {
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
